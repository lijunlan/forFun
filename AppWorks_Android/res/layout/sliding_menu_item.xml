<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.melonstudio.ui.CircularImage
        android:id="@+id/sliding_menu_item_header"
        android:layout_width="@dimen/little_er_header_size"
        android:layout_height="@dimen/little_er_header_size"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/sliding_menu_item_text"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/sliding_menu_item_msgnum"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center_vertical"
        android:textColor="@color/darkgray" />

</LinearLayout>