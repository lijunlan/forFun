<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.melonstudio.ui.CircularImage
        android:id="@+id/comment_item_header"
        android:layout_width="@dimen/litter_header_size"
        android:layout_height="@dimen/litter_header_size"
        android:layout_margin="@dimen/little_header_margin"
        android:layout_marginRight="10dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comment_user_id"
            style="@style/key_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/comment_user_content"
            style="@style/value_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/comment_user_time"
            style="@style/time_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip" />
    </LinearLayout>

</LinearLayout>