<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/regist_layout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:inputType="textCapCharacters"
        android:nextFocusDown="@+id/regist_layout_password"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这将是您的登录账号,支持字母/数字/下划线" />

    <EditText
        android:id="@+id/regist_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持6-16个字符，至少包括大写字母/小写字母/数字/符号中的两种" />

    <EditText
        android:id="@+id/regist_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="昵称"
        android:nextFocusForward="@+id/regist_layout_email"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是您的昵称" />

    <EditText
        android:id="@+id/regist_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱地址"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <Button
        android:id="@+id/regist_layout_btn"
        style="@style/big_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_btn_margin_side"
        android:layout_marginRight="@dimen/big_btn_margin_side"
        android:layout_marginTop="20dip"
        android:text="注册" />

</LinearLayout>