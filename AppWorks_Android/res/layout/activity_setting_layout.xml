<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@color/white"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                style="@style/key_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="接收通知" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/setting_notify"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@color/white"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                style="@style/key_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="展示手机号" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/setting_phone"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@color/white"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                style="@style/key_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="展示邮箱" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/setting_email"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/setting_change_password"
            style="@style/big_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_btn_margin_side"
            android:layout_marginRight="@dimen/big_btn_margin_side"
            android:layout_marginTop="@dimen/big_btn_margin_top"
            android:text="更改密码" />
    </LinearLayout>

</ScrollView>