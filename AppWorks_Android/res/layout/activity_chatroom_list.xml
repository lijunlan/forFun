<?xml version="1.0" encoding="utf-8"?>
<com.melonstudio.ui.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatroomlist_layout_sliding"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ListView
        android:id="@+id/activity_chatroomlist_menu_list"
        android:layout_width="270dip"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="#3A3A3A" >
    </ListView>

    <LinearLayout
        android:id="@+id/activity_chatroomlist_content"
        style="@style/content_layout_style"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/chatroom_list_titlebar"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:background="#9FDFCB"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="Group Messages"
                android:textColor="#40547E"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:background="#9FDFCB"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/chatroom_list_message"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:contentDescription="Messages"
                    android:src="@drawable/message" />

                <ImageView
                    android:id="@+id/chatroom_list_all"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:contentDescription="All Groups"
                    android:src="@drawable/all2" />
            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/chatroom_list_id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FBFAF8"
            android:divider="#E8E7E4"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

</com.melonstudio.ui.SlidingLayout>