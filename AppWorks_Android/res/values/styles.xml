<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="titleTextStype">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="create_chatroom_edittext_style">
        <item name="android:padding">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>

    <style name="circle_header_style">
        <item name="android:scaleType">center</item>
        <item name="android:width">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:height">45dp</item>
    </style>

    <style name="content_layout_style">
        <item name="android:layout_width">320dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- Styles for the main content -->
    <style name="content_title_style">
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content_text_style">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="content_btn_text_style" parent="content_main_color">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content_main_color">
        <item name="android:background">#03D3A1</item>
    </style>

    <style name="content_main_titile" parent="content_title_style">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">#602623</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="content_main_content">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#CDCDCD</item>
    </style>

    <style name="title_bar_style">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/image_titlebar_background</item>
    </style>

    <style name="title_bar_text" parent="@style/title_bar_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Dialog Theme -->
    <style name="text_18_ffffff">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_16_666666">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="sdw_white">
        <item name="android:shadowColor">#7fffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="text_15_ffffff_sdw" parent="@style/sdw_79351b">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_15_666666_sdw" parent="@style/sdw_white">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- UserInfoActivity Styles -->
    <style name="user_info_left_style">
        <item name="android:textColor">#8C8C8C</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="user_info_right_style" parent="@style/user_info_left_style">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Big Button -->
    <style name="big_button">
        <item name="android:textSize">@dimen/big_btn_word_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dip</item>
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="key_style">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/user_info_bigger_text</item>
    </style>

    <style name="value_style">
        <item name="android:textColor">@color/sub_text_color</item>
        <item name="android:textSize">@dimen/user_info_smaller_text</item>
    </style>

    <style name="time_text_style">
        <item name="android:textSize">@dimen/time_text_size</item>
    </style>

</resources>