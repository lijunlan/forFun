<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:paddingTop="10dip" >

    <WebView
        android:id="@+id/fragment_webview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.25" >
    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/webview_img_back"
            android:layout_width="@dimen/little_labels_size"
            android:layout_height="@dimen/little_labels_size"
            android:layout_margin="10dip"
            android:contentDescription="后退"
            android:scaleType="fitXY"
            android:src="@drawable/bai_back" />

        <ImageView
            android:id="@+id/webview_img_forward"
            android:layout_width="@dimen/little_labels_size"
            android:layout_height="@dimen/little_labels_size"
            android:layout_margin="10dip"
            android:contentDescription="前进"
            android:scaleType="fitXY"
            android:src="@drawable/bai_forward" />

        <ImageView
            android:id="@+id/webview_img_refresh"
            android:layout_width="@dimen/little_labels_size"
            android:layout_height="@dimen/little_labels_size"
            android:layout_margin="10dip"
            android:contentDescription="刷新"
            android:scaleType="fitXY"
            android:src="@drawable/bai_refresh" />
    </LinearLayout>

</LinearLayout>